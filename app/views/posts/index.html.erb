<div class="off-white big-spacer-top" id="blog-post-listing">
	<!-- Latest Posts -->
	<div class="row">
		<div class="small-spacer-top">
			<div class="small-12 columns post-listing big-spacer-bottom">
				<% @posts.each do |p| %>
					<h3><%= link_to p.title, p %></h3>
					<p class="small centered"><%= time_ago_in_words(p.created_at) %> ago <span>|</span> <%= p.reading_time %> minute read</p>
					<%= link_to markdown(truncate(p.body, length: 230, omission: " ... ")), p %>
					<hr>
				<% end %>
			</div>
		</div>
	</div>
</div>






<% @posts.each do |post| %>

	<div id="post-listing">
		<div class="row">
			<div class="small-12 medium-10 medium-centered columns small-spacer-top medium-spacer-bottom">
				<div class="blog-landing-list">
					<h2 class="centered"><%= link_to markdown(post.title), post, class: "post-title" %></h2>
					<p class="centered"><%= link_to markdown(truncate(post.body, length: 230, omission: " ... ")), post, class: "post-body" %></p>
					<p class="centered"><small>posted <%= time_ago_in_words(post.created_at) %> ago by <%= post.user.name %></small></p>
				</div>
			</div>
		</div>
	</div>

<% end %>

<div class="pagination-centered" id="infinite-scrolling">
	<%= will_paginate %>
</div>
