<div id="form">
	<div class="row">
		<div class="medium-spacer-top">
			<h2>Sign Up</h2>
		</div>
		<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
			<div class="small-12 medium-8 medium-centered columns">
				<%= devise_error_messages! %>

				<%= f.text_field :name, autofocus: true, placeholder: "First Name", class: "border-bottom" %>

			  <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "border-bottom" %>

		    <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "border-bottom" %>

		    <%= f.submit "Sign up", class: "button expand" %>
			</div>
			  		
	  <% end %>

		<div class="medium-spacer-bottom">
			<%= render "devise/shared/links" %>
		</div>

	</div>
</div>