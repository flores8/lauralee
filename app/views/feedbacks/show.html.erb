<div id="thoughtful-feedback">
	<div class="row">
		<div class="small-12 columns">
			<h1 class="text-center">Your Feedback</h1>
		</div>
		<div class="small-12 medium-8 medium-centered columns">
			<div class="big-spacer-top">
				<p><%= simple_format(@feedback.most_interested) %></p>
				<p class="created-by">submitted <%= time_ago_in_words(@feedback.created_at) %> ago by <%= @feedback.user.email %></p>
			</div>
		</div>
		<div class="small-12 medium-6 medium-centered columns small-spacer-top">
			<%= link_to 'Edit', edit_feedback_path(@feedback), class: "button expand" %>
		</div>
	</div>
	<div class="row text-center">
		<div class="small-spacer-top">
			<p><%= link_to 'View All My Feedback', feedbacks_path, class: "pink-link-center" %> </p>
		</div>
	</div>
</div>



