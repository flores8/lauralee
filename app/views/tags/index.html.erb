<div class="row medium-spacer">
	<% @tags.each do |t| %>
		<h2><%= link_to t.name, tag_path(t.name) %> <small>(tagged in <%= t.taggings_count %> <%= t.taggings_count > 1 ? "posts" : "post" %>)</small></h2>
		<% Post.tagged_with(t).each do |p| %>
			<p><%= link_to p.title, post_path(p) %></p>
		<% end %>
		<hr>
	<% end %>
</div>
