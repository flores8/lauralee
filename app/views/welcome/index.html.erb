<div id="header">
	<!-- Intro Text -->
	<div class="header-call">
		<div class="row">
			<div class="small-12 medium-11 medium-centered columns text-center">
				<h1 class="animated fadeInUp">Creating Ruby on Rails Applications that are <em>Beautiful</em> and <em>Usable</em>.</h1>
			</div>
		</div>
	</div>
</div>

<div class="off-white big-spacer-top" id="home-work">
	<div class="row">
		<h2 class="text-center">What I'm Working On</h2>
	</div>

	<!-- Major Finder and Discovery -->
	<div class="row">
		<div class="small-spacer-top">
			<div class="small-12 medium-6 columns portfolio">
				<%= link_to image_tag('work/majorfinder.jpg'), work_majorfinder_path, class: "border" %>
				<h3><%= link_to "Major Finder", work_majorfinder_path %></h3>
			</div>
			<div class="small-12 medium-6 columns portfolio">
				<%= link_to image_tag('work/discovery.jpg'), work_discovery_path, class: "border" %>
				<h3><%= link_to "Discovery", work_discovery_path %></h3>
			</div>
		</div>
	</div>
</div>

<div class="off-white big-spacer-top" id="blog-post-listing">
	<div class="row">
		<h2 class="text-center">My Latest Posts</h2>
	</div>
	<!-- Latest Posts -->
	<div class="row">
		<div class="small-spacer-top">
			<div class="small-12 columns post-listing big-spacer-bottom">
				<% @post.each do |p| %>
					<h3><%= link_to p.title, p %></h3>
					<p class="small centered"><%= time_ago_in_words(p.created_at) %> ago <span>|</span> <%= p.reading_time %> minute read</p>
					<%= link_to markdown(truncate(p.body, length: 230, omission: " ... ")), p, class: "post-body" %>
					<hr>
				<% end %>
			</div>
		</div>
	</div>
</div>


<div class="gray-strip">
	<div class="small-spacer">
		<div class="row">
			<div class="small-12 medium-6 medium-centered columns">
				<% if user_signed_in? %>
					<h3>Thank You For Signing Up!</h3>
					<%= link_to	"Access Your Resources", training_path, class: "button expand button-pink" %>
				<% else %>
					<%= link_to "Sign up, for free!", "#", "data-reveal-id" => "sign-up-modal", class: "button expand button-pink" %>
				<% end %>
			</div>
		</div>
	</div>
</div>



