<!-- Sign Up Modal
============================== -->
<div id="sign-up-modal", class="reveal-modal" data-reveal >
	<% if user_signed_in? %>
		<h2 class="text-center">Congratulations, you've already signed up!</h2>
		<% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
			<p>We're waiting for you to confirm your account.  Please check your email and click on the link.</p>
		<% else %>
			<p>You've confirmed your account and are signed up. <%= link_to "Tell me what you want to learn", new_feedback_path, class: "pink-link-center" %> or let me <%= link_to "thank you for signing up", resources_path, class: "pink-link-center" %>.</p>
		<% end %>
		<!-- if they haven't confirmed their account.. link to resend confirmation instructions else go to coming soon page. -->
	<% else %>
		<div class="small-spacer">
			<h2 class="text-center">Sign Up For Free</h2>
		</div>
		<div id="form">
			<div class="row">
				<div class="small-12 medium-8 medium-centered columns">
					<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
						<%= devise_error_messages! %>

						<%= f.text_field :name, autofocus: true, placeholder: "First Name", class: "border-bottom" %>

						<%= f.email_field :email, autofocus: true, placeholder: "Email", class: "border-bottom" %>

						<%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "border-bottom" %>

						<%= f.submit "Send Me Training When It's Available", class: "button expand sign-up" %>
					<% end %>
				</div>
			</div>

		<!-- Link to Sign Up Modal -->
	  <div class="medium-spacer-top">
	  	<div class="row">
	  		<div class="small-10 medium-4 small-centered medium-centered columns">
	  			<p><a href="#" data-reveal-id="sign-in-modal" class="secondary button expand">Sign In</a></p>
	  		</div>
	  	</div>
	  </div>
	<% end %>
  <a class="close-reveal-modal">&#215;</a>
</div>