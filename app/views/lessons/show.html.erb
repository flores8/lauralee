<div class="row">
	<div class="medium-spacer-top">
		<p><%= link_to "all lessons", lessons_path %></p>
		<h2><%= @lesson.title %></h2>
		<p><%= markdown @lesson.body %></p>
		<p><%= @lesson.next_lesson %></p>
	
		<p>
			<% if @previous_lesson.first.present? %>
				<%= link_to "< Previous Lesson", lesson_path(@previous_lesson.first.id) %>
			<% end %>
			<% if @next_lesson.first.present? %>
				<%= link_to "Next Lesson >", lesson_path(@next_lesson.first.id), class: "right" %></p>
			<% end %>
	</div>
</div>
